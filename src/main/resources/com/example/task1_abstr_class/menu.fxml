<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.task1_abstr_class.MainController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <FlowPane alignment="CENTER_LEFT" hgap="10">
            <ListView fx:id="listView" prefHeight="75.0" prefWidth="150.0" />
            <ColorPicker fx:id="colorPicker" />
        </FlowPane>
    </top>
    <center>
        <Canvas fx:id="canvas" width="600" height="400" onMouseClicked="#handleCanvasClick" />
    </center>
</BorderPane>