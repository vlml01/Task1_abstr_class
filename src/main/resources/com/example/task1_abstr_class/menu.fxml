<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.task1_abstr_class.MainController"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <Canvas fx:id="canvas" height="300.0" width="600.0" />
        <HBox spacing="10" alignment="CENTER">  <!-- Добавлен HBox -->
            <children>
                <Button fx:id="rectangleButton" text="Прямоугольник" />
                <Button fx:id="circleButton" text="Круг" />
                <Button fx:id="ellipseButton" text="Эллипс" />
            </children>
        </HBox>
        <ColorPicker fx:id="colorpicker" />
    </children>
</VBox>
